                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/avenirnextregular"
                        android:text="si el producto posse codigo de barras por favor escanee aquí"
                        android:textAlignment="viewStart"
                        android:textColor="@color/darkGray"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/escanear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/semiround_gold_solid"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="0dp"
                        android:text="ESCANEAR"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <net.orandja.shadowlayout.ShadowLayout
                        android:id="@+id/scannerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/semiround_white_solid"
                        android:padding="4dp"
                        app:shadow_cast_only_background="true"
                        app:shadow_color="#808"
                        app:shadow_downscale="1"
                        app:shadow_radius="8"
                        app:shadow_with_color="true"
                        app:shadow_with_content="true"

                        app:shadow_with_css_scale="true"
                        app:shadow_with_dpi_scale="true"
                        app:shadow_x_shift="0dp"
                        app:shadow_y_shift="4dp">

                        <RelativeLayout
                            android:id="@+id/barcodeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp">

                            <androidx.appcompat.widget.AppCompatEditText

                                android:id="@+id/barcode"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/avenirnextregular"
                                android:hint="Ingrese manualmente el código"
                                android:inputType="numberDecimal"


                                android:textSize="14sp" />
                        </RelativeLayout>

                    </net.orandja.shadowlayout.ShadowLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo_skill"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/finCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/semiround_gold_solid"
            android:fontFamily="@font/poppins_bold"
            android:padding="0dp"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/nuevoProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/semiround_gray_solid"
            android:fontFamily="@font/poppins_bold"
            android:text="Siguiente Producto"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black"
        android:visibility="gone">

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
         />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:tint="@color/darkGray"
        app:srcCompat="@drawable/logout" />


</RelativeLayout>